<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="592dp"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/correctCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </include>

    <Button
        android:id="@+id/endButton"
        android:layout_width="83dp"
        android:layout_height="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="278dp"
        android:background="@drawable/button"
        android:text="@string/endButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <Button
        android:id="@+id/Bkey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Akey" />

    <Button
        android:id="@+id/Akey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Gkey" />

    <Button
        android:id="@+id/Gkey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Fkey" />

    <Button
        android:id="@+id/Fkey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ekey" />

    <Button
        android:id="@+id/Ekey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Dkey" />

    <Button
        android:id="@+id/Dkey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ckey" />

    <Button
        android:id="@+id/Ckey"
        android:layout_width="55dp"
        android:layout_height="155dp"
        android:layout_marginStart="96dp"
        android:background="@drawable/whitekey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Aakey"
        android:layout_width="36dp"
        android:layout_height="107dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/blackkey"
        app:layout_constraintBottom_toBottomOf="@+id/Akey"
        app:layout_constraintEnd_toStartOf="@+id/Bkey"
        app:layout_constraintStart_toEndOf="@+id/Akey" />

    <Button
        android:id="@+id/Ggkey"
        android:layout_width="36dp"
        android:layout_height="107dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/blackkey"
        app:layout_constraintBottom_toBottomOf="@+id/Gkey"
        app:layout_constraintEnd_toStartOf="@+id/Akey"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/Gkey" />

    <Button
        android:id="@+id/Ffkey"
        android:layout_width="36dp"
        android:layout_height="107dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/blackkey"
        app:layout_constraintBottom_toBottomOf="@+id/Fkey"
        app:layout_constraintEnd_toStartOf="@+id/Gkey"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/Fkey" />

    <Button
        android:id="@+id/Ddkey"
        android:layout_width="35dp"
        android:layout_height="107dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/blackkey"
        app:layout_constraintBottom_toBottomOf="@+id/Dkey"
        app:layout_constraintStart_toEndOf="@+id/Cckey" />

    <Button
        android:id="@+id/Cckey"
        android:layout_width="36dp"
        android:layout_height="107dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/blackkey"
        app:layout_constraintBottom_toBottomOf="@+id/Ckey"
        app:layout_constraintStart_toStartOf="@+id/Ckey" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="347dp"
        android:layout_height="103dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/image"
        app:layout_constraintBottom_toTopOf="@+id/question"
        app:layout_constraintEnd_toStartOf="@+id/correctCount"
        app:layout_constraintStart_toEndOf="@+id/endButton"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <TextView
        android:id="@+id/question"
        android:layout_width="116dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Which note is it?"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Fkey"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <TextView
        android:id="@+id/correctCount"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="290dp"
        android:text="Correct:1/10"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>